<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ohimarc.marc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".view.mainMenu.StartMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.FlashcardActivity" />
        <activity
            android:name=".view.editdeck.EditNoteActivity"
            android:exported="true"
            android:parentActivityName=".view.editdeck.EditDeckActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ohimarc.marc.view.editdeck.EditDeckActivity" />
        </activity>
        <activity android:name=".view.editdeck.EditDeckActivity" />
        <activity android:name=".view.ResultsActivity" />
        <activity android:name=".view.AddRemoveDeckActivity" />
        <activity android:name=".view.quizMode.QuizActivity" />
        <activity android:name=".view.Home" />
    </application>

</manifest>